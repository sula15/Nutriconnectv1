{
  "name": "nutriconnect-hackathon",
  "version": "1.0.0", 
  "description": "NutriConnect POC for ReviveNation Hackathon 2025",
  "scripts": {
    "install:backend": "cd src/backend && npm install",
    "install:frontend": "cd src/frontend && npm install", 
    "install:all": "npm run install:backend && npm run install:frontend",
    "dev:backend": "cd src/backend && npm run dev",
    "dev:frontend": "cd src/frontend && npm start",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build:backend": "cd src/backend && npm run build",
    "build:frontend": "cd src/frontend && npm run build", 
    "build": "npm run build:backend && npm run build:frontend",
    "test:backend": "cd src/backend && npm test",
    "test:frontend": "cd src/frontend && npm test",
    "test": "npm run test:backend && npm run test:frontend",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": ["nutriconnect", "dpi", "hackathon", "school-meals", "sri-lanka"],
  "author": "NutriConnect Team",
  "license": "MIT"
}

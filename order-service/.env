# Server Configuration
PORT=3002
NODE_ENV=development
API_BASE_URL=http://localhost:3002
FRONTEND_URL=http://localhost:3000

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Database Configuration (Future implementation)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nutriconnect
DB_USER=nutriconnect_user
DB_PASSWORD=secure_password
DB_DIALECT=postgresql

# DPI Integration - SLUDI (Identity Provider)
SLUDI_BASE_URL=https://sandbox-sludi.gov.lk
SLUDI_CLIENT_ID=your-sludi-client-id
SLUDI_CLIENT_SECRET=your-sludi-client-secret
SLUDI_REDIRECT_URI=http://localhost:3002/auth/sludi/callback

# DPI Integration - NDX (Data Exchange)
NDX_BASE_URL=https://sandbox-ndx.gov.lk
NDX_API_KEY=your-ndx-api-key
NDX_CLIENT_ID=your-ndx-client-id

# DPI Integration - PayDPI (Payment Gateway)
PAYDPI_BASE_URL=https://sandbox-paydpi.gov.lk
PAYDPI_MERCHANT_ID=your-merchant-id
PAYDPI_API_KEY=your-paydpi-api-key
PAYDPI_WEBHOOK_SECRET=your-webhook-secret
PAYDPI_RETURN_URL=http://localhost:3002/payment/return
PAYDPI_CANCEL_URL=http://localhost:3002/payment/cancel

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100